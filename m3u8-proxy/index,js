const express = require('express');
const { createProxyMiddleware } = require('http-proxy-middleware');

const app = express();

// Proxy simples para link m3u8 original
app.use('/proxy', createProxyMiddleware({
  target: 'http://lexus.hubns.top:80', // vocÃª pode alterar aqui
  changeOrigin: true,
  pathRewrite: {
    '^/proxy': '', // remove /proxy da URL
  },
}));

app.listen(3000, () => {
  console.log('Proxy rodando na porta 3000');
});
